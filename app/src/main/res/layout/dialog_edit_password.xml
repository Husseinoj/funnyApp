<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llmain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:orientation="vertical"
        android:weightSum="60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_title_size"

            android:background="@drawable/draw_top_two_corner_borderless"
            android:orientation="horizontal"
            android:weightSum="25">

            <TextView
                fontPath="@string/fontsIran"
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="23.8"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="تغییر کلمه عبور"
                android:textColor="#fff"
                android:textSize="@dimen/text_size"
                android:typeface="sans"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            fontPath="@string/fontsIran"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorLightBlue"
            android:text=""/>

        <LinearLayout
            android:id="@+id/llLastName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/colorLightBlue"
            android:orientation="horizontal"
            android:weightSum="35">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.35"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="17.7"
                android:background="@drawable/draw_bg_search"
                android:orientation="horizontal"
                android:weightSum="18">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"/>


                <EditText
                    android:paddingLeft="5dp"
                    fontPath="@string/fontsIran"
                    android:id="@+id/etoldpass"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="16"
                    android:background="@drawable/draw_round_whitebox"
                    android:imeOptions="actionNext"
                    android:inputType="textWebPassword"
                    android:singleLine="true"
                    android:textColor="@color/text_gray"
                    android:typeface="serif" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.78"/>

            <TextView
                fontPath="@string/fontsIran"
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:text="کلمه عبور قبلی:"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_between"
                android:typeface="sans"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.2"/>
        </LinearLayout>

        <TextView
            fontPath="@string/fontsIran"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorLightBlue"
            android:text=""
            android:textSize="@dimen/text_so_small_size"/>

        <LinearLayout
            android:id="@+id/rlNationalCodeBottomBorder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:background="@color/colorLightBlue"
            android:orientation="horizontal"
            android:weightSum="35">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.05"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="17.7"
                android:background="@drawable/draw_bg_search"
                android:orientation="horizontal"
                android:weightSum="18">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8"
                        android:orientation="horizontal"
                        android:weightSum="18">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"/>
                        <EditText
                            fontPath="@string/fontsIran"
                            android:id="@+id/etNewPass"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="17"
                            android:background="@drawable/draw_round_whitebox"
                            android:imeOptions="actionNext"
                            android:inputType="textWebPassword"
                            android:singleLine="true"
                            android:textColor="@color/text_gray"
                            android:typeface="serif" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.98"/>

            <TextView
                fontPath="@string/fontsIran"
                android:id="@+id/tvLblRepeatPass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:text="کلمه عبور جدید:"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_between"
                android:typeface="sans"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"/>
        </LinearLayout>

        <TextView
            fontPath="@string/fontsIran"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/colorLightBlue"
            android:text=""
            android:textSize="@dimen/text_so_small_size"/>

        <LinearLayout
            android:id="@+id/rlGenderRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:background="@color/colorLightBlue"
            android:orientation="horizontal"
            android:weightSum="35">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.05"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="17.7"
                android:background="@drawable/draw_bg_search"
                android:orientation="horizontal"
                android:weightSum="18">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="16.9"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8"
                        android:orientation="horizontal"
                        android:weightSum="18">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"/>
                        <EditText
                            fontPath="@string/fontsIran"
                            android:id="@+id/etRepeatNewPass"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="17"
                            android:background="@drawable/draw_round_whitebox"
                            android:imeOptions="actionNext"
                            android:inputType="textWebPassword"
                            android:singleLine="true"
                            android:textColor="@color/text_gray"
                            android:typeface="serif" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.98"/>


            <TextView
                fontPath="@string/fontsIran"
                android:id="@+id/tvRepeatNewPass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:text="تکرار کلمه عبور جدید:"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_between"
                android:typeface="sans"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>

        <TextView
            fontPath="@string/fontsIran"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            android:textColor="@android:color/holo_red_light"
            android:background="@color/colorLightBlue"
            android:text=""
            android:gravity="center_horizontal|center_vertical"
            android:id="@+id/tvErrorMessage"
            android:textSize="@dimen/text_size"/>

        <LinearLayout
            android:id="@+id/rlNameRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/colorLightBlue"
            android:orientation="horizontal"
            android:weightSum="30">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>

            <Button
                fontPath="@string/YekanFont"
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@drawable/draw_btn_radius"
                android:gravity="center"
                android:text="انصراف"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_between"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

            <Button
                fontPath="@string/YekanFont"
                android:id="@+id/btnRegister"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@drawable/draw_btn_radius"
                android:gravity="center"
                android:text="ثبت"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_between"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>

        </LinearLayout>

        <FrameLayout
            android:background="@color/colorLightBlue"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>


</LinearLayout>